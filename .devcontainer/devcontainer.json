{
    "name": "${containerWorkspaceFolderBasename}",
    "image": "dev:node",
    "remoteEnv": {
        "WSL_HOST_IP": "${localEnv:WSL_HOST_IP}",
        "WSL_IP": "${localEnv:WSL_IP}"
    },
    "mounts": [
        "type=bind,src=${localEnv:HOME}/.ssh,dst=/home/node/.ssh",
        "type=bind,src=${localEnv:HOME}/.wallaby,dst=/home/node/.wallaby",
    ],
    // Add the IDs of extensions you want installed when the container is created.
    "extensions": [
        // common
        "alefragnani.bookmarks",
        "orepor.color-tabs-vscode-ext",
        "rudijansenvanvuuren.blueprints",
        "naumovs.color-highlight",
        "xyz.local-history",
        "EditorConfig.EditorConfig",
        // md
        "yzhang.markdown-all-in-one",
        "hediet.vscode-drawio",
        // string
        "qcz.text-power-tools",
        "britesnow.vscode-toggle-quotes",
        // git
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "vivaxy.vscode-conventional-commits",
        // spell checker
        "streetsidesoftware.code-spell-checker",
        "streetsidesoftware.code-spell-checker-russian",
        // html
        "tht13.html-preview-vscode",
        // js & ts
        "dbaeumer.vscode-eslint",
        "wallabyjs.quokka-vscode",
        "wallabyjs.wallaby-vscode",
        "wix.vscode-import-cost",
    ],
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "git config --global core.editor \"code --wait\"",
    // Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
    // "remoteUser": "node"
}